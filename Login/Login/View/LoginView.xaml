<Window x:Class="ProyectoEscolarizado2.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoEscolarizado2.View"
        xmlns:customcontrols ="clr-namespace:ProyectoEscolarizado2.Custom_Controls"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/imagen.png" Stretch="None"></ImageBrush>
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="3" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"></GradientStop>
                    <GradientStop Color="#DA34AE" Offset="0.65"></GradientStop>
                    <GradientStop Color="#8A16C1" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#060531" Offset="0"></GradientStop>
                    <GradientStop Color="DarkBlue" Offset="0.35"></GradientStop>
                    <GradientStop Color="AliceBlue" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="LOG IN" 
                               Foreground="AntiqueWhite"
                               FontSize="15" 
                               FontFamily="Monserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    
                    
                    <Button x:Name="btnMinimizar"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Monserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" 
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnCerrar"
                            BorderThickness="0"
                            Content="x"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Monserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnCerrar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Red"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkRed"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" 
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
                <StackPanel Width="220"
                                Grid.Row="1"
                                Orientation="Vertical"
                                Margin="0,35,0,0">
                    <Image Source="/Images/icon.png"
                               Width="100"
                               Height="100"/>
                    
                    <TextBlock Text="Ingeniería de Software"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Medium"
                               FontFamily="Monserrat"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Flavio Uriel Huizar González"
                               Foreground="LightCyan"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Monserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>
                    
                    <TextBlock Text="Username"
                               Foreground="LightGray"
                               FontWeight="Medium"
                               FontFamily="Monserrat"
                               Margin="0,35,0,0"/>
                    <TextBox x:Name="txtUser"
                               Text="{Binding Username,
                               UpdateSourceTrigger=PropertyChanged}"
                               FontFamily="Monserrat"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="White"
                               CaretBrush="LightGray"
                               BorderBrush="DarkGray"
                               Height="28"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,2"
                               Padding="20,0,0,0">

                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Password"
                           Foreground="LightGray"
                           FontSize="15"
                           FontWeight="Medium"
                           FontFamily="Monserrat"
                           Margin="0,15,0,0"/>

                    <customcontrols:BindablePasswordBox
                        Password="{Binding Password,
                        Mode = TwoWay,
                        UpdateSourceTrigger=PropertyChanged}"
                        Height="28"
                        Margin="0,5,0,0"></customcontrols:BindablePasswordBox>
                </StackPanel>
            </Grid>
        </Border>
    </Border>

</Window>
